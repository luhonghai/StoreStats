<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <ejb-local-ref>
        <ejb-ref-name>AndroidEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.AndroidDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>AppleEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.AppleDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>ReviewAndroidEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.ReviewAndroidDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>ReviewAppleEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.ReviewAppleDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>UserEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.UserDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>AppleHistoryEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.ReviewAppleHistoryDAO</local>
    </ejb-local-ref>

    <ejb-local-ref>
        <ejb-ref-name>AndroidHistoryEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.stat.store.dao.ReviewAndroidHistoryDAO</local>
    </ejb-local-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>com.stat.store.schedule.JobListener</listener-class>
    </listener>
</web-app>